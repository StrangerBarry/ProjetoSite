                            <input type="radio" value="2" name="design" id="design">2
                            <input type="radio" value="1" name="design" id="design">1
                        </fieldset>
                        <br>
                        <fieldset>
                            <legend>Dê uma nota para comida e petiscos:</legend>
                            <input type="radio" value="10" name="conteudo" id="conteudo">10
                            <input type="radio" value="9" name="conteudo" id="conteudo">9
                            <input type="radio" value="8" name="conteudo" id="conteudo">8
                            <input type="radio" value="7" name="conteudo" id="conteudo">7
                            <input type="radio" value="6" name="conteudo" id="conteudo">6
                            <input type="radio" value="5" name="conteudo" id="conteudo">5
                            <input type="radio" value="4" name="conteudo" id="conteudo">4
                            <input type="radio" value="3" name="conteudo" id="conteudo">3
                            <input type="radio" value="2" name="conteudo" id="conteudo">2
                            <input type="radio" value="1" name="conteudo" id="conteudo">1
                        </fieldset>
                        <label for="site">Site: </label>
                        <input type="text" id="site" required="" placeholder="Digite o site">
                        <label for="tel">Telefone: </label>
                        <input type="text" id="tel" placeholder="Digite telefone">
                        <label for="email">E-Mail: </label>
                        <input type="email" id="email" placeholder="Digite seu e-mail">
                        <br>
                        <br>
                        <input type="reset">
                        <input type="submit">

                    </fieldset>
                </form>
